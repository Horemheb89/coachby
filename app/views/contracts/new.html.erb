<div class="banner-main">
  <div class="container">
    <h1><span class="gray-text"><%= icon('fas', 'user-plus') %> </span>New Athlete</h1>
    <p>Good for you, Coach!</p>
  </div>
</div>

<div class="container">
  <div class="category-padding">
    <%= simple_form_for @contract do |f| %>
      <%= f.input :athlete_id, :collection => User.where(:is_coach => false).map { |user| [user.full_name, user.id]} %>
      <%= f.button :submit, value: "NEW ATHLETE", class: "btn-main" %>
    <% end %>
  </div>
</div>

