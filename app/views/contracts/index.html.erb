<!-- Banner Main -->
<div class="banner-main">
  <div class="container">
    <h1>Athletes</h1>
    <p>Manage your <%= @contracts.count %> contract(s).</p>
  </div>
</div>

<div class="container">

  <!-- List of all contracts -->
  <% @contracts.each do |contract| %>
    <div>
      <%= link_to contract_path(contract) do %>
        <p><%= contract.athlete.first_name %></p>
      <% end %>
    </div>
  <% end %>

  <!-- Create a new contract -->
  <h3>Getting Started</h3>
  <p>Need to add a new contract? Congratulations!</p>
  <%= link_to "ADD ATHLETE", new_contract_path %>

</div>
