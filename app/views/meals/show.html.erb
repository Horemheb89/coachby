<h1>Meals#show</h1>
<p>Find me in app/views/meals/show.html.erb</p>
<div class="container">
  <h1>show meal</h1>

  <p> <%= @meal.name %> </p>

  <table>
      <thead>
          <tr>
            <th > Quantité</th>
            <th > Ingrédient</th>
            <th > Protein</th>
            <th > Lipid</th>
            <th > Carbs</th>
            <th > Calories</th>
          </tr>
      </thead>
      <tbody>
          <% sum_p = sum_c =sum_l = sum_c = sum_cal = 0 %>
          <% @meal.doses.each do |dose| %>
            <tr>
              <td> <%= dose.quantity %> </td>
              <td> <%= link_to dose.ingredient.name, ingredient_path(dose.ingredient) %> </td>
              <td> <%= ((dose.quantity * dose.ingredient.protein)/dose.ingredient.quantity).round   %> </td>
              <td> <%= (dose.quantity * dose.ingredient.lipid).round  %> </td>
              <td> <%= (dose.quantity * dose.ingredient.carbs).round  %> </td>
              <td> <%= (((dose.quantity * dose.ingredient.protein)/dose.ingredient.quantity)*4 +
              (dose.quantity * dose.ingredient.lipid) * 9 +
               (dose.quantity * dose.ingredient.carbs)*4).round %> </td>
               <% sum_p += ((dose.quantity * dose.ingredient.protein)/dose.ingredient.quantity).round  %>
              <% sum_l += (dose.quantity * dose.ingredient.lipid).round %>
              <% sum_c += (dose.quantity * dose.ingredient.carbs).round   %>
              <% sum_cal += (((dose.quantity * dose.ingredient.protein)/dose.ingredient.quantity)*4 +
              (dose.quantity * dose.ingredient.lipid) * 9 +
               (dose.quantity * dose.ingredient.carbs)*4).round  %>
            </tr>
            <% if @meal.doses.last == dose %>
              <tr>
                <td> Totaux:  </td>
                <td> <%=  %> </td>
                <td> <%= sum_p %> </td>
                <td> <%= sum_l %> </td>
                <td> <%= sum_c %> </td>
                <td> <%= sum_cal %> </td>
                <% sum_p = sum_c =sum_l = sum_c = sum_cal = 0 %>
              </tr>
            <% end %>
          <% end %>
      </tbody>
  </table>

<h2> Add something </h2>

<%= render "doses/form", meal: @meal, dose: @dose %>


</div>

