<h1>Ingredients#index</h1>
<p>Find me in app/views/ingredients/index.html.erb</p>


<div class="container">

  <%= form_tag ingredients_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a movie"
    %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>


  <%= render "form", ingredient: @ingredient %>

  <% @ingredients.each do  |ingredient| %>
    <ul>
      <li><%= link_to ingredient.name, ingredient_path(ingredient) %></li>
      <li><%= link_to ingredient.protein, ingredient_path(ingredient) %></li>
      <li><%= link_to ingredient.carbs, ingredient_path(ingredient) %></li>
      <li><%= link_to ingredient.lipid, ingredient_path(ingredient) %></li>
    </ul>
  <% end %>

</div>


