<div class="container">
  <h1 class = page-title> Sessions list <i class="fas fa-dumbbell"></i> </h1>

  <div class="category-padding">
    <% @trainings.each do |training| %>
      <%= link_to training_path(training) do %>
        <div class="session-card">
          <div class="session-card-date">
            <img src="https://lmimirror3pvr.azureedge.net/static/media/1769/a871b582-b5ee-4585-9115-81a3ae2f099d/ww_32-288x288_reebok_lesmills_ss16_d3_bodypump_02_053-1_f1.jpg" />
            <h3>Session Date : <%= training.start_time %></h3>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<div class="white-background">
  <div class="container">

    <div class="category-padding">
      <div class="category-content category-content-picture-right">
        <div class="row">

          <div class="col-12 col-xl-6">
            <%= image_tag "banner_foot-image.jpg" %>
          </div>

          <div class="col-12 col-xl-6 category-content-text">
            <h3>Training Continues Here</h3>
            <p>Your athlete needs a new session?</p>
            <%= link_to new_program_training_path(@program), class: "btn-main" do %>
              <p>NEW SESSION</p>
            <% end %>
          </div>

        </div>
      </div>
    </div>

  </div>
</div>


