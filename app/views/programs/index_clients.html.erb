<% line_data = [] %>
<% data_p = data_l = data_c = {} %>
<% @programs.first(1).each do |program| %>
  <% program.meals.group_by(&:start_time).each do |day, meals| %>
    <% sum_p = sum_c =sum_l = sum_c = sum_cal = 0 %>
    <% sum_p = meals.map{|meal| meal.proteins}.sum  %>
    <% data_p[day.strftime("%m/%d/%Y")] = sum_p %>
    <% sum_p = sum_c =sum_l = sum_c = sum_cal = 0 %>
  <% end %>
    <% line_data << {:name => "protein", :data => data_p } %>
    <%= line_data %>
<% end %>

<%= line_chart line_data, ytitle: "Macro" %>





<div class = "meal-stat">
  <div> <%= line_chart meal_prot_date, ytitle: "Protein" %> </div>
  <div> <%= line_chart meal_fat_date, ytitle: "Fats" %> </div>
  <div> <%= line_chart meal_carb_date, ytitle: "Carbs" %> </div>
</div>


